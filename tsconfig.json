{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
 